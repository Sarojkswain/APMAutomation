<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<!--
 @Tas(testBed = [
	    {name=com.ca.apm.tests.testbed.IACentOS7Testbed, executeOn=machine1}],
	  owner = kurma05,
	  size = BIG,
	  description = 'Infrastructure Agent Tests'),
	  snapshotPolicy = SnapshotPolicy.ALWAYS,
      snapshot = SnapshotMode.LIVE
-->	
<suite name="InfrastructureAgent_CentOS7" configfailurepolicy="continue">
	<parameter name="testngEmailEnabled" value="true" />
	<parameter name="dockerImage" value="caapm/dockermonitor:latest" />
	
	<test name="InfrastructureAgent_CentOS7" preserve-order="true">
		<classes>
			<class name="com.ca.apm.tests.test.IATests">
				 <methods>
				 	<include name="testInstallDockerHostExtension" />
				 	<include name="testDockerHostMonitoring" />
				 	<include name="testAppDockerHostCorrelation" />
				 </methods>
			</class>
		</classes>    	   
	</test>
	<listeners>    	
   	    <listener class-name="org.uncommons.reportng.HTMLReporter" />    	
   		<listener class-name="org.uncommons.reportng.JUnitXMLReporter" />
 	</listeners>
</suite>