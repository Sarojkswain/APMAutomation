<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.ca.apm.test</groupId>
        <artifactId>com.ca.apm.test.parent</artifactId>
        <version>99.99.dev_SaaS_fix-SNAPSHOT</version>
    </parent>

    <artifactId>upgrade-systemtest</artifactId>
    <packaging>pom</packaging>

    <name>upgrade-systemtest</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- versions -->
        <version.testNg>6.8.8</version.testNg>
        <version.junit>4.11</version.junit>
        <version.tas>2.3.13-cu.RC</version.tas>
        <!--  resman props  -->
        <resman.user>admin</resman.user>
        <resman.password>admin</resman.password>
        <resman.host>tas-cz-res-man</resman.host>
        <resman.url>http://${resman.host}:8080/resman</resman.url>
        <resman.deployUser>deploy</resman.deployUser>
        <resman.deployPassword>#cut2dl#</resman.deployPassword>
        <!--  automation-agent props  -->
        <aa.deployUser>deploy</aa.deployUser>
        <aa.deployPassword>#cut2dl#</aa.deployPassword>
        <!--  tas props  -->
        <local.jetty.port>8082</local.jetty.port>
        <tas.testClassifier>jar-with-dependencies</tas.testClassifier>
        <tas.skipLocalRepo>true</tas.skipLocalRepo>
        <!--  ALM props  -->
        <alm.host>http://alm11.ca.com/qcbin</alm.host>
        <alm.domain>APM</alm.domain>
        <alm.project>APM</alm.project>
        <alm.username />
        <alm.password />
        <alm.testPlanRoot>Automation</alm.testPlanRoot>
        <alm.testLabRoot>APM 9.8\Automation\EM</alm.testLabRoot>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.ca.tas</groupId>
                <artifactId>automation-roles</artifactId>
                <version>${version.tas}</version>
            </dependency>
            <dependency>
                <groupId>com.ca.tas</groupId>
                <artifactId>automation-flows</artifactId>
                <version>${version.tas}</version>
            </dependency>
            <dependency>
                <groupId>com.ca.tas</groupId>
                <artifactId>automation-core</artifactId>
                <version>${version.tas}</version>
            </dependency>
            <dependency>
                <groupId>com.ca.tas.libs</groupId>
                <artifactId>tas-libs</artifactId>
                <version>${version.tas}</version>
            </dependency>
            <dependency>
                <groupId>com.ca.tas</groupId>
                <artifactId>tas-libs</artifactId>
                <version>${version.tas}</version>
            </dependency>
            <dependency>
                <groupId>org.testng</groupId>
                <artifactId>testng</artifactId>
                <version>${version.testNg}</version>
            </dependency>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${version.junit}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <configuration>
                        <source>1.8</source>
                        <target>1.8</target>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.eclipse.m2e</groupId>
                    <artifactId>lifecycle-mapping</artifactId>
                    <version>1.0.0</version>
                    <configuration>
                        <lifecycleMappingMetadata>
                            <pluginExecutions>
                                <pluginExecution>
                                    <pluginExecutionFilter>
                                        <groupId>com.ca.tas.plugins</groupId>
                                        <artifactId>tas-maven-plugin</artifactId>
                                        <versionRange>[${version.tas},)</versionRange>
                                        <goals>
                                            <goal>index</goal>
                                        </goals>
                                    </pluginExecutionFilter>
                                    <action>
                                        <ignore/>
                                    </action>
                                </pluginExecution>
                            </pluginExecutions>
                        </lifecycleMappingMetadata>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    <modules>
        <module>flows</module>
        <module>test-core</module>
    </modules>
</project>