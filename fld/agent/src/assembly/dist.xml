<?xml version="1.0" encoding="UTF-8"?>
<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
        <id>dist</id>
        <formats>
                <format>zip</format>
        </formats>
        <includeBaseDirectory>false</includeBaseDirectory>

        <fileSets>
                <fileSet>
                        <outputDirectory>./</outputDirectory>
                        <directory>src/main/resources</directory>
                        <excludes>
<!--                         	<exclude>fld-agent.properties</exclude> -->
                         	<exclude>build-agent.properties</exclude>
                        	<exclude>fldagent-test-context.xml</exclude>
                        </excludes>
                </fileSet>
        </fileSets>

        <dependencySets>
                <dependencySet>
                	<outputDirectory>lib</outputDirectory>
                	<useTransitiveDependencies>true</useTransitiveDependencies>
                	<useProjectArtifact>true</useProjectArtifact>
                	<excludes>
                        <exclude>com.ca.apm.binaries.selenium:PhantomJS</exclude>
                	</excludes>
                </dependencySet>
                <dependencySet>
                	<unpack>true</unpack>
                	<outputDirectory>bin</outputDirectory>
                    <useTransitiveDependencies>false</useTransitiveDependencies>
                    <useProjectArtifact>false</useProjectArtifact>
              		<includes>
                        <include>com.ca.apm.binaries.selenium:PhantomJS</include>
               		</includes>
                </dependencySet>
                <dependencySet>
                	<unpack>true</unpack>
                	<unpackOptions>
                    	<includes>
                        	<include>*.class</include>
                    	</includes>
                    	<excludes>
                        	<exclude>fldagent-test-context.xml</exclude>
                    	</excludes>
            		</unpackOptions>
        		</dependencySet>
        </dependencySets>
        <moduleSets>
        	<moduleSet>
        		<binaries>
        			<outputDirectory>bin</outputDirectory>
        			<includes>
                        <include>com.ca.apm.binaries.selenium:PhantomJS</include>
        			</includes>
        		</binaries>
        	</moduleSet>
        </moduleSets>

</assembly>