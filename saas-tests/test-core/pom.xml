<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>saas-tests</artifactId>
		<groupId>com.ca.apm.saas</groupId>
		<version>99.99.dev_SaaS_fix-SNAPSHOT</version>
	</parent>

	<artifactId>saas-tests-core</artifactId>
	<packaging>jar</packaging>

	<name>saas-tests - Core</name>
	<description>Module for defining testbeds, test and custom roles.</description>

	<dependencies>
		<dependency>
			<groupId>com.ca.apm.saas</groupId>
			<artifactId>saas-tests-flows</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.ca.tas</groupId>
			<artifactId>automation-roles</artifactId>
		</dependency>
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
		</dependency>
		<dependency>
				<groupId>org.seleniumhq.selenium</groupId>
				<artifactId>selenium-support</artifactId>
				<version>3.4.0</version>
		</dependency>
		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
			<version>21.0</version>
		</dependency>
		<dependency>
			<groupId>com.ca.apm.systemtest.fld</groupId>
			<artifactId>fld-roles</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.ca.apm.systemtest.fld</groupId>
			<artifactId>tas-tests-core</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.ca.apm.test</groupId>
			<artifactId>em-tests-core</artifactId>
			<version>${project.version}</version>
		</dependency>	
			<dependency>
			<groupId>com.ca.apm.coda-projects.test-projects</groupId>
			<artifactId>codacommons</artifactId>
			<version>${project.version}</version>
		</dependency>	
		<dependency>
			<groupId>org.uncommons</groupId>
			<artifactId>reportng</artifactId>
			<version>1.1.3</version>
		</dependency>
		<dependency>
			<groupId>javax.mail</groupId>
			<artifactId>mail</artifactId>
			<version>1.4</version>
		</dependency>
		<dependency>
			<groupId>org.json</groupId>
			<artifactId>json</artifactId>
			<version>20140107</version>
		</dependency>
		<dependency>
			<groupId>com.google.inject</groupId>
			<artifactId>guice</artifactId>
			<version>3.0</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>com.ca.tas.plugins</groupId>
				<artifactId>tas-maven-plugin</artifactId>
				<configuration>
					<resmanApiUrl>${resman.url}</resmanApiUrl>
					<resmanUser>${resman.user}</resmanUser>
					<resmanPassword>${resman.password}</resmanPassword>
					<almHost>${alm.host}</almHost>
					<almDomain>${alm.domain}</almDomain>
					<almProject>${alm.project}</almProject>
					<almUsername>${alm.username}</almUsername>
					<almPassword>${alm.password}</almPassword>
					<almTestPlanRoot>${alm.testPlanRoot}</almTestPlanRoot>
					<almTestLabRoot>${alm.testLabRoot}</almTestLabRoot>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>index</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.ca.tas.plugins</groupId>
				<artifactId>resman-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<appendAssemblyId>true</appendAssemblyId>
					<archive>
						<manifest>
							<mainClass>com.ca.tas.client.deployment.Deploy</mainClass>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
						</manifest>
					</archive>
					<appendAssemblyId>true</appendAssemblyId>
					<descriptors>
						<descriptor>assembly.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>pack-dependencies</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
					<execution>
						<id>jmeterscripts</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					<configuration>
						<descriptors>
							<descriptor>src/main/assembly/assembly_dist.xml</descriptor>
						</descriptors>
					</configuration>
					</execution>					
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
