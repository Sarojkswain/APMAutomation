<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.ca.apm.tests</groupId>
		<artifactId>qa-integration-flows</artifactId>
		<version>99.99.dev_SaaS_fix-SNAPSHOT</version>
	</parent>
	<artifactId>qa-integration-flows-core</artifactId>
	<packaging>jar</packaging>
	<name>qa-integration-flows - Core</name>
	<description>Module for defining testbeds, test and custom roles.</description>
	<properties>
		<testbed.testbedTessSmtpHost>mail.ca.com</testbed.testbedTessSmtpHost>
		<testbed.testbedTestbedReportEmail>bocto01@ca.com</testbed.testbedTestbedReportEmail>
	</properties>
	<dependencies>
		<dependency>
			<groupId>com.ca.apm.tests</groupId>
			<artifactId>qa-integration-flows-flows</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.ca.apm.commons</groupId>
			<artifactId>APM-Commons-Lite-roles</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.ca.apm.systemtest.fld</groupId>
			<artifactId>tas-tests-core</artifactId>
		</dependency>
		<dependency>
			<groupId>com.ca.apm.test</groupId>
			<artifactId>em-tests-core</artifactId>
		</dependency>
		<dependency>
			<groupId>com.ca.tas</groupId>
			<artifactId>automation-core</artifactId>
		</dependency>
		<dependency>
			<groupId>com.ca.tas</groupId>
			<artifactId>automation-roles</artifactId>
			<exclusions>
				<exclusion>
					<artifactId>jaxb-api</artifactId>
					<groupId>javax.xml.bind</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.ca.tas</groupId>
			<artifactId>automation-flows</artifactId>
		</dependency>
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
		</dependency>
		<!--
		<dependency>
			<groupId>xml-apis</groupId>
			<artifactId>xml-apis</artifactId>
		</dependency>
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-java</artifactId>
		</dependency>
		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
		</dependency>
		-->
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>properties-maven-plugin</artifactId>
				<version>1.0.0</version>
				<executions>
					<execution>
						<phase>generate-resources</phase>
						<goals>
							<goal>write-project-properties</goal>
						</goals>
						<configuration>
							<outputFile>${project.build.outputDirectory}/qa-integration-flows.properties</outputFile>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.ca.tas.plugins</groupId>
				<artifactId>tas-maven-plugin</artifactId>
				<configuration>
					<resmanApiUrl>${resman.url}</resmanApiUrl>
					<resmanUser>${resman.user}</resmanUser>
					<resmanPassword>${resman.password}</resmanPassword>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>index</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.ca.tas.plugins</groupId>
				<artifactId>resman-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<appendAssemblyId>true</appendAssemblyId>
					<descriptor>src/assembly/jar.xml</descriptor>
					<archive>
						<manifest>
							<mainClass>com.ca.tas.client.deployment.Deploy</mainClass>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
						</manifest>
					</archive>
				</configuration>
				<executions>
					<execution>
						<id>pack-dependencies</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
